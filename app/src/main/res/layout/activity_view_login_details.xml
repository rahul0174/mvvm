<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="loginRequest"
            type="com.example.model.LoginRequest" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:context=".ViewLoginDetailsActivity">
        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{loginRequest.message}"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/token"
            android:layout_below="@id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{loginRequest.token}"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/mpinId"
            android:layout_below="@id/token"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{loginRequest.mpinId}"
            android:textSize="20dp" />

    </RelativeLayout>
</layout>